<config>
	<modules>
		<Clockworkgeek_Rememberme>
			<version>0.5.0</version>
		</Clockworkgeek_Rememberme>
	</modules>
	<global>
		<blocks>
		</blocks>
		<helpers>
		</helpers>
		<models>
			<clockworkgeek_rememberme>
				<class>Clockworkgeek_Rememberme_Model</class>
			</clockworkgeek_rememberme>
			<core>
				<rewrite>
					<cookie>Clockworkgeek_Rememberme_Model_Cookie</cookie>
				</rewrite>
			</core>
		</models>
	</global>
	<frontend>
		<layout>
			<updates>
				<rememberme>
					<file>rememberme.xml</file>
				</rememberme>
			</updates>
		</layout>
		<events>
			<customer_login>
				<observers>
					<clockworkgeek_rememberme>
						<class>clockworkgeek_rememberme/cookie</class>
						<method>setSessionRemembrance</method>
					</clockworkgeek_rememberme>
				</observers>
			</customer_login>
			<customer_logout>
				<observers>
					<clockworkgeek_rememberme>
						<class>clockworkgeek_rememberme/cookie</class>
						<method>unsetSessionRemembrance</method>
					</clockworkgeek_rememberme>
				</observers>
			</customer_logout>
		</events>
		<translate>
			<modules>
				<Clockworkgeek_Rememberme>
					<files>
						<default>Clockworkgeek_Rememberme.csv</default>
					</files>
				</Clockworkgeek_Rememberme>
			</modules>
		</translate>
	</frontend>
</config>
